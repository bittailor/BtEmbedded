ccflags = <%= @ccflags %>
cxxflags = <%= @cxxflags %>
linkflags = <%= @linkflags %>

rule cc
  command = <%= @cc %> -MMD -MT $out -MF $out.d $ccflags $includes -c $in -o $out
  description = CC $out
  depfile = $out.d

rule cxx
  command = <%= @cxx %> -MMD -MT $out -MF $out.d $cxxflags $includes -c $in -o $out
  description = CXX $out
  depfile = $out.d
  
rule ar
  command = rm -f $out && <%= @ar %> crs $out $in
  description = AR $out
  
rule link
  command = <%= @cxx %> -o $out $in $libs $linkflags
  description = LINK $out

